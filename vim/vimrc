set nocompatible                " disable vi compatibility
set nomodeline                  " security advice !
filetype off                    " no ext detection

" INTERFACE
set so=10                       " activate a margin on vertical scrolling
set title                       " activate vim title on the current xterm
set mouse=a                     " activate mouse selection for every mode
set wildmenu                    " activate a menu for autocompletion
set wildmode=list:longest       "   (menu behaviour)
set nospell                     " activate inline spell check
set spelllang=en                "   (spelling language)
set background=dark             " always have dark background
colorscheme molokai             " activate colorscheme
set t_Co=256                    " add more colors

" DISPLAY
set ruler                       " display cursor location
set syntax=on                   " display syntaxic coloration
set number 				        " display line numbers (gutter)
set showmode			        " display the current mode
set showmatch			        " display matching parenthesis
set laststatus=2                " display the status line (always)

" INDENTATION
set expandtab                   " insert spaces when hitting TABs
set shiftround                  " round indent to multiple of 'shiftwidth'
set autoindent                  " align the new line indent with the previous line
set tabstop=4                   " a hard TAB displays as 4 columns
set shiftwidth=4                " operation >> indents 4 columns; << unindents 4 columns
set softtabstop=4               " insert/delete 4 spaces when hitting a TAB/BACKSPACE
set backspace=indent,eol,start  " allow backspacing over everything in insert mode 

" COMPLETION
set completeopt-=preview        " disable the completion window

" SEARCH
set incsearch			        " show match as the search proceeds
set nohlsearch                  " search highlighting
set ignorecase                  " case insensitivity
set smartcase                   "   (only when no caps is used)

" FOLDING
set foldlevel=20                " folding level
set foldmethod=indent           " folding behaviour

" READ/WRITE
set nowrap                      " don't wrap text
set encoding=utf-8              " default encoding
set ffs=unix,dos,mac            " default newline

" SAVING/BACKUP
set hidden                      " buffers can exist in background
set nowb                        " no backup before overriding
set nobackup                    " no backup files
set noswapfile                  " no .swp files
set history=100                 " history size
set undolevels=100              " undo size

" EXCLUSION
set suffixes=.jpg,.png,.jpeg,.gif,.bak,~,.swp,.swo,.o,.pyc

" PLUGINS
" set the runtime path to include Vundle and initialize
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

" let Vundle Manage Vundle
Bundle 'gmarik/vundle'

Bundle 'easymotion/vim-easymotion'
Bundle 'Valloric/YouCompleteMe'
Bundle 'flazz/vim-colorschemes'
Bundle 'Raimondi/delimitMate'
Bundle 'scrooloose/syntastic'
let g:syntastic_go_checkers=['']
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*
let g:syntastic_python_flake8_args = "--ignore=E501,F403"
let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0
Bundle 'tomtom/tcomment_vim'
Bundle 'scrooloose/nerdtree'
"Bundle 'honza/vim-snippets'
Bundle 'ivanov/vim-ipython'
Bundle 'bling/vim-airline' 
let g:airline#extensions#tabline#enabled=1
let g:airline_powerline_fonts=1
let g:airline_theme='simple'
Bundle 'majutsushi/tagbar'
Bundle 'SirVer/ultisnips'
let g:UltiSnipsExpandTrigger="<c-e>"
let g:UltiSnipsJumpForwardTrigger="<c-b>"
let g:UltiSnipsJumpBackwardTrigger="<c-z>"
let g:UltiSnipsSnippetDirectories=["UltiSnips", "my-snippets"]
Bundle 'powerline/fonts'
Bundle 'kien/ctrlp.vim'
let g:ctrlp_map = '<c-p>'
let g:ctrlp_cmd = 'CtrlP'
let g:ctrlp_custom_ignore = {
  \ 'dir':  '\v[\/]\.(git|hg|svn)$',
  \ 'file': '\v\.(exe|so|dll|pyc|jpeg|jpg|gif|png)$',
  \ 'link': 'some_bad_symbolic_links',
  \ }
let g:ctrlp_working_path_mode = 'c'

" all the of your plugins must be added before the following line
call vundle#end()
filetype plugin on
filetype indent on

" SHORTCUTS
let mapleader="\<Space>"        " set map leader (user extension shortcut)_
" Basic
nnoremap <leader>w :w<CR>
nnoremap <leader>x :x<CR>
nnoremap <leader>q :q<CR>
nnoremap <leader>h :nohl<CR>
nnoremap <leader>r :r !
nnoremap <leader>t :tabedit 
nnoremap <leader>T :tabedit $MYVIMRC<CR>
nnoremap <leader>L :source $MYVIMRC<CR>
nnoremap <leader>V :vsplit 
nnoremap <leader>H :hsplit 
nnoremap <leader>? :help 
" Copy & Paste
vmap <Leader>y "+y
vmap <Leader>d "+d
nmap <Leader>p "+p
nmap <Leader>P "+P
vmap <Leader>p "+p
vmap <Leader>P "+P
" Plugins
nnoremap <leader>B :PluginInstall<CR>
nnoremap <leader>U :PluginUpdate<CR>
nnoremap <leader>` :NERDTreeToggle<CR>
nnoremap <leader>S :TagbarToggle<CR>

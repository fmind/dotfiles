set copyindent
set shiftround
set tabstop=4 
set shiftwidth=4
set softtabstop=4
set backspace=indent,eol,start
"}}}
""" NOTIFICATION {{{
set noerrorbells
set novisualbell
"}}}
""" OPTIMIZATION {{{
set ttyfast
set lazyredraw
"}}}
""" CONSERVATION {{{
set backup
set undofile
set updatecount=100
set undodir=$VIMDIR/undo/
set directory=$VIMDIR/swap/
set backupdir=$VIMDIR/backup/
set viminfo ='200,n$VIMDIR/viminfo
"}}}
"}}}

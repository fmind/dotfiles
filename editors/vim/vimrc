" CHECKUP {{{
set nomodeline
set nocompatible
"}}}
" STARTUP {{{
let $VIMDIR=$HOME.'/.vim/'
"}}}
" SET-UP {{{
""" WINDOW {{{
set title
set mouse=a
set splitright
set splitbelow
set t_Co=256
set conceallevel=2
set background=dark
" set colorcolumn=100
let g:loaded_matchparen=1
"}}}
""" SIDEBAR {{{
set ruler
set number
set relativenumber
"}}}
""" STATUSBAR {{{

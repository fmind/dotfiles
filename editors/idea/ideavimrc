" PLUGINS "{{{
set surround
"}}}
" SETTINGS "{{{
" show
set nonumber
set noshowmode
set relativenumber
" alert
set novisualbell
" search
set gdefault
set wrapscan
set incsearch
set smartcase
set ignorecase
set nohlsearch
" scroll
set scroll=0
set scrolloff=5
set scrolljump=1
set sidescroll=0
set sidescrolloff=5
" lookup
set history=100
set undolevels=1000
set matchpairs+=<:>
set selection=inclusive
set clipboard=unnamedplus,unnamed
set viminfo=<1000,'100,/50,:100,s100,h
"}}}
"" BINDINGS "{{{
"" lead
noremap <CR> :
let mapleader = " "
" esc
imap jk <Esc>
" remap
map j gj
map k gk
vmap j gj
vmap k gk
map U :action $Redo<CR>
" indent
vmap <  <gv
vmap >  >gv
" format
nmap zj o<Esc>k
nmap zk O<Esc>j
" navigate
map J gT
map K gt
map H :action Back<CR>
map L :action Forward<CR>
map <A-f> <C-f>
map <A-b> <C-b>
map <A-e> <C-e>
map <A-y> <C-y>
map [[ :action MethodUp<CR>
map ]] :action MethodDown<CR>
map <A-k> :action VimWindowUp<CR>
map <A-j> :action VimWindowDown<CR>
map <A-h> :action VimWindowLeft<CR>
map <A-l> :action VimWindowRight<CR>
" leader (lower)
noremap <leader>a :action GotoAction<CR>
nnoremap <leader>b :action Debug<cr>
nnoremap <leader>c :action GotoClass<CR>
nnoremap <leader>d :action EditorDuplicate<CR>
" nnoremap <leader>e
nnoremap <leader>f :action GotoFile<CR>
nnoremap <leader>g :action GotoDeclaration<CR>
nnoremap <leader>h :action QuickJavaDoc<CR>
nnoremap <leader>i :action GotoImplementation<CR>
nnoremap <leader>j :action EditorScrollToCenter<CR>
nnoremap <leader>k :action EditorDeleteLine<CR>
" nnoremap <leader>l
" nnoremap <leader>m
" nnoremap <leader>n
nnoremap <leader>o :action OverrideMethods<CR>
nnoremap <leader>p :action ParameterInfo<CR>
nnoremap <leader>q :action CloseContent<cr>
nnoremap <leader>r :action Run<CR>
nnoremap <leader>s :action GotoSymbol<CR>
nnoremap <leader>t :action GotoTest<CR>
nnoremap <leader>u :action GotoSuperMethod<CR>
" nnoremap <leader>v 
nnoremap <leader>w :w<CR>
nnoremap <leader>x :action GotoNextError<CR>
nnoremap <leader>y :action GotoTypeDeclaration<CR>
nnoremap <leader>z :action RecentFiles<CR>
" leader (upper)
nnoremap <leader>A :action Switcher<cr>
nnoremap <leader>B :action ToggleLineBreakpoint<cr>
" nnoremap <leader>C 
" nnoremap <leader>D
nnoremap <leader>E :action RenameElement<CR>
nnoremap <leader>F :action Find<CR>
nnoremap <leader>G :action Generate<CR>
nnoremap <leader>H :action SplitHorizontally<CR>
nnoremap <leader>I :action ImplementMethods<CR>
nnoremap <leader>J :action Rerun<CR>
nnoremap <leader>K :action RerunTests<CR>
nnoremap <leader>L :action RerunFailedTests<CR>
nnoremap <leader>M :action ChangeSignature<CR>
" nnoremap <leader>N
nnoremap <leader>O :action VimWindowOnly<CR>
" nnoremap <leader>P
" nnoremap <leader>Q
nnoremap <leader>R :source ~/.ideavimrc<CR>
nnoremap <leader>S :action SaveAll<CR>
nnoremap <leader>T :action GenerateTestMethod<CR>
nnoremap <leader>U :action ShowUsages<CR>
nnoremap <leader>V :action SplitVertically<CR>
" nnoremap <leader>W
nnoremap <leader>X :action VimWindowClose<CR>
nnoremap <leader>Y :action ChangeTypeSignature<CR>
" nnoremap <leader>Z
" leader (other)
nnoremap <leader>] :action EditorCodeBlockEnd<CR>
nnoremap <leader>[ :action EditorCodeBlockStart<CR>
nnoremap <leader>/ :action CommentByLineComment<CR>
""}}}

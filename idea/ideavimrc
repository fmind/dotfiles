" PLUGINS "{{{
set surround
"}}}
" SETTINGS {{{
" show
set nonumber
set noshowmode
set relativenumber
" alert
set novisualbell
" search
set gdefault
set wrapscan
set incsearch
set smartcase
set ignorecase
set nohlsearch
" scroll
set scroll=0
set scrolloff=5
set scrolljump=1
set sidescroll=0
set sidescrolloff=5
" lookup
set history=100
set undolevels=1000
set matchpairs+=<:>
set selection=inclusive
set clipboard=unnamedplus,unnamed
set viminfo=<1000,'100,/50,:100,s100,h
"}}}
" BINDINGS {{{
"" lead
nnoremap ; :
vnoremap ; :
let mapleader = " "
"" remap
nnoremap j gj
nnoremap k gk
vnoremap j gj
nnoremap E g$
nnoremap Y y$
nnoremap U <C-r>
nnoremap J <C-d>
nnoremap K <C-u>
noremap gs :sort<CR>
noremap gj :join<CR>
nnoremap U :action $Redo<CR>
"" indent
vnoremap <  <gv
vnoremap >  >gv
"" format
vnoremap Q gq
nnoremap Q gqap
nnoremap zj o<Esc>k
nnoremap zk O<Esc>j
"" navigate
nnoremap H :action Back<CR>
nnoremap L :action Forward<CR>
nnoremap K :action NextTab<CR>
nnoremap J :action PreviousTab<CR>
nnoremap <A-f> <C-f>
nnoremap <A-b> <C-b>
nnoremap <A-e> <C-e>
nnoremap <A-y> <C-y>
nnoremap [[ :action MethodUp<CR>
nnoremap ]] :action MethodDown<CR>
nnoremap <A-k> :action VimWindowUp<CR>
nnoremap <A-j> :action VimWindowDown<CR>
nnoremap <A-h> :action VimWindowLeft<CR>
nnoremap <A-l> :action VimWindowRight<CR>
" leader (lower)
nnoremap <leader>a :action GotoAction<CR>
nnoremap <leader>b :action Debug<CR>
nnoremap <leader>c :action GotoClass<CR>
nnoremap <leader>d :action EditorDuplicate<CR>
nnoremap <leader>e :action RecentFiles<CR>
nnoremap <leader>f :action GotoFile<CR>
nnoremap <leader>g :action GotoDeclaration<CR>
nnoremap <leader>h :action QuickJavaDoc<CR>
nnoremap <leader>i :action GotoImplementation<CR>
nnoremap <leader>j :action Find<CR>
nnoremap <leader>k :action EditorDeleteLine<CR>
" nnoremap <leader>l 
nnoremap <leader>m :action GotoNextError<cr>
nnoremap <leader>n :action GotoPreviousError<cr>
nnoremap <leader>o :action OverrideMethods<CR>
nnoremap <leader>p :action ParameterInfo<CR>
nnoremap <leader>q :q<CR>
nnoremap <leader>r :action Run<CR>
nnoremap <leader>s :action GotoSymbol<CR>
nnoremap <leader>t :action GotoTest<CR>
nnoremap <leader>u :action GotoSuperMethod<CR>
nnoremap <leader>v ggVG
nnoremap <leader>w :w<CR>
nnoremap <leader>x :x<CR>
nnoremap <leader>y :action GotoTypeDeclaration<CR>
nnoremap <leader>z :action RenameFile<CR> 
" leader (upper)
nnoremap <leader>A :action Switcher<cr>
nnoremap <leader>B :action ToggleLineBreakpoint<cr>
" nnoremap <leader>C 
" nnoremap <leader>D
nnoremap <leader>E :action RenameElement<CR>
" nnoremap <leader>F 
nnoremap <leader>G :action Generate<CR>
nnoremap <leader>H :action SplitHorizontally<CR>
nnoremap <leader>I :action ImplementMethods<CR>
nnoremap <leader>J :action Rerun<CR>
nnoremap <leader>K :action RerunTests<CR>
nnoremap <leader>L :action RerunFailedTests<CR>
nnoremap <leader>M :action ChangeSignature<CR>
" nnoremap <leader>N
nnoremap <leader>O :action VimWindowOnly<CR>
" nnoremap <leader>P
" nnoremap <leader>Q
nnoremap <leader>R :source ~/.ideavimrc<CR>
nnoremap <leader>S :action EditorToggleUseSoftWraps<CR>
nnoremap <leader>T :action GenerateTestMethod<CR>
nnoremap <leader>U :action ShowUsages<CR>
nnoremap <leader>V :action SplitVertically<CR>
nnoremap <leader>W :action SaveAll<CR>
nnoremap <leader>X :action VimWindowClose<CR>
nnoremap <leader>Y :action ChangeTypeSignature<CR>
" nnoremap <leader>Z
" leader (other)
nnoremap <leader>] :action EditorCodeBlockEnd<CR>
nnoremap <leader>[ :action EditorCodeBlockStart<CR>
nnoremap <leader>/ :action CommentByLineComment<CR>
"}}}

# git {{{
alias g="git"
alias gm="git submodule"
alias gwf='gws fetch'
alias gwi='rm -f .projects.gws && gws init'
alias ghs="sed -i 's?https://github.com/?git@github.com:?' .git/config"
function ghc {
  git clone git@github.com:fmind/$1.git
}
function gho {
    git remote add origin "git@github.com:fmind/$(basename $PWD)"
    git push -u origin HEAD
}
function ghu {
    git remote set-url origin "git@github.com:fmind/$(basename $PWD)"
}
# }}}

# BINDKEY
bindkey -v
# PLUGINS
plugins=(
    alias-tips
    ansible
    colored-man-pages
    command-not-found
    docker
    gcloud
    gh
    git
    npm
    pip
    python
    sudo
    vi-mode
    vscode
    zoxide
    zsh-autopair
    zsh-completions
    zsh-autosuggestions
    zsh-syntax-highlighting
)
# PRIVATE
if [ -f ~/.private ]; then
    source ~/.private
fi
# SOURCES
source $ZSH/oh-my-zsh.sh
# ALIASES
if [ -f ~/.aliases ]; then
    source ~/.aliases
fi
# STARSHIP
command -v starship &>/dev/null && eval "$(starship init zsh)"
# COMPLETIONS
command -v just &>/dev/null && eval "$(just --completions zsh)"
command -v uv &>/dev/null && eval "$(uv generate-shell-completion zsh)"

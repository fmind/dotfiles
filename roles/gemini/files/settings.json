{
  "autoAccept": "true",
  "contextFileName": "AGENTS.md",
  "hideBanner": true,
  "hideTips": true,
  "preferredEditor": "vscode",
  "selectedAuthType": "oauth-personal",
  "theme": "Google Code",
  "vimMode": true,
  "checkpointing": {
    "enabled": true
  },
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT_GEMINI}"
      }
    },
    "terraform": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "hashicorp/terraform-mcp-server"
      ]
    }
  }
}

[alias]
    aa = add --all
    br = branch
    ca = commit -am
    ci = commit -m
    ck = checkout
    cl = clone
    cn = commit -nm
    df = diff
    lg = log --graph
    lo = log --oneline
    lp = log --graph --decorate --pretty=oneline --abbrev-commit
    ph = push
    pl = pull
    sm = submodule
    st = status
    tr = ls-tree -r master
    tn = ls-tree -r master --name-only

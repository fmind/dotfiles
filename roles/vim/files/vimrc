" vim: fdm=marker
" INIT {{{
set nocompatible
set shortmess=I
" }}}
" FILE {{{
set path+=**
set encoding=UTF-8
set fileformats=unix,mac,dos
" }}}
" MENU {{{
set wildmenu
set complete=.,w,b,u,t,i
set wildmode=list:longest,full
set completeopt=menuone,preview
" }}}
" GREP {{{
if executable('ag')
    set grepprg=ag\ --column\ --nogroup\ --nocolor
endif
" }}}
" SHELL {{{
if executable('zsh')
    set shell=/usr/bin/zsh
else
    set shell=/bin/bash
endif
" }}}
" SPELL {{{
set spelllang=en,fr
set thesaurus+=/usr/share/dict/theses
set dictionary+=/usr/share/dict/words
" }}}
" PASTE {{{
set clipboard=unnamedplus
" }}}
" STATUS {{{
set laststatus=2
set statusline=\ %n:\ \%f\ %y%=%r\ %l\ :\ %c\ (%p%%)\ 
" }}}
" SEARCH {{{
set gdefault
set hlsearch
set incsearch
" }}}
" INDENT {{{
set smarttab
set expandtab
set autoindent
set tabstop=4 
set shiftround
set shiftwidth=4
set softtabstop=4
set backspace=indent,eol,start
" }}}
" BACKUP {{{
set nobackup
set noswapfile
set nowritebackup 
" }}}
" WINDOW {{{
set splitbelow
set splitright
" }}}
" BUFFER {{{
set hidden
set confirm
set autoread
set autowriteall
set scrolloff=10
" }}}
" GUTTER {{{
set number
set relativenumber
" }}}
" FOLDER {{{
set foldmethod=syntax
set foldlevelstart=99
" }}}
" PLUGIN {{{
syntax enable
set synmaxcol=1000
filetype indent on
filetype plugin on
try
    colorscheme molokai
catch
    colorscheme darkblue
endtry
" }}}
" BROWSER {{{
let g:loaded_netrw       = 1
let g:loaded_netrwPlugin = 1
" }}}
" SESSION {{{
set sessionoptions-=options
" }}}
" KEYMAPS {{{
" esc {{{
imap jk <Esc>
" }}}
" cmd {{{
vnoremap ; :
nnoremap ; :
" }}}
" mark {{{
nnoremap ' `
" }}}
" line {{{
nnoremap j gj
nnoremap k gk
" }}}
" move {{{
nnoremap B g^
nnoremap E g$
nnoremap Y y$
" tags {{{
nnoremap <C-j> :tnext<CR>
nnoremap <C-k> :tprev<CR>
" }}}
" }}}
" scroll {{{
nnoremap J <C-d>
nnoremap K <C-u>
nnoremap U <C-r>
" }}}
" errors {{{
nnoremap <C-h> :cprev<CR>
nnoremap <C-l> :cnext<CR>
" }}}
" buffer {{{
nnoremap H :bp<CR>
nnoremap L :bn<CR>
nnoremap Q :bd<CR>
" }}}
" indent {{{
xnoremap < <gv
xnoremap > >gv
" }}}
" format {{{
nnoremap + gg=G
nnoremap = gqap
" }}}
" habits {{{
nnoremap <CR> <C-e>
noremap! <C-k> <Up>
noremap! <C-j> <Down>
noremap! <C-h> <Left>
noremap! <C-l> <Right>
" }}}
" xemacs {{{
cnoremap <C-D> <Del>
inoremap <C-D> <Del>
cnoremap <C-E> <End>
inoremap <C-E> <End>
cnoremap <C-A> <Home>
inoremap <C-A> <Home>
cnoremap <C-K> <Up>
inoremap <C-K> <Up>
cnoremap <C-J> <Down>
inoremap <C-J> <Down>
cnoremap <C-L> <Left>
inoremap <C-L> <Left>
cnoremap <C-H> <Right>
inoremap <C-H> <Right>
cnoremap <C-B> <S-Left>
inoremap <C-F> <S-Right>
" }}}
" comment {{{
vnoremap ,# :s/^/#/<CR>:nohl<CR>
nnoremap ,# :s/^/#/<CR>:nohl<CR>
vnoremap ,,# :s/^#//<CR>:nohl<CR>
nnoremap ,,# :s/^#//<CR>:nohl<CR>
vnoremap ,% :s/^/%/<CR>:nohl<CR>
nnoremap ,% :s/^/%/<CR>:nohl<CR>
vnoremap ,,% :s/^%//<CR>:nohl<CR>
nnoremap ,,% :s/^%//<CR>:nohl<CR>
vnoremap ," :s/^/\"/<CR>:nohl<CR>
nnoremap ," :s/^/\"/<CR>:nohl<CR>
vnoremap ,," :s/^\"//<CR>:nohl<CR>
nnoremap ,," :s/^\"//<CR>:nohl<CR>
vnoremap ,/ :s/^/\/\//<CR>:nohl<CR>
nnoremap ,/ :s/^/\/\//<CR>:nohl<CR>
vnoremap ,,/ :s/^\/\///<CR>:nohl<CR>
nnoremap ,,/ :s/^\/\///<CR>:nohl<CR>
" }}}
" command {{{
nnoremap g! :w !sudo tee > /dev/null %<CR>
nnoremap g. :edit $MYVIMRC<CR>
nnoremap gb :b#<CR>
nnoremap gj :join<CR>
nnoremap gk :shell<CR>
nnoremap g# :set spell<CR>
nnoremap gl :nohl<CR>
nnoremap gs :sort<CR>
" }}}
" leaders {{{
let mapleader="\<space>"
nnoremap <leader><CR>> :make
nnoremap <leader><Space> :make<CR>
" }}}
" localleaders {{{
let maplocalleader="\<c-space>"
" }}}
" }}}
" AUTOCMD {{{
" vimrc {{{
augroup vimrc
    autocmd!
    autocmd BufWritePost $MYVIMRC source $MYVIMRC
augroup end
" }}}
" python {{{
augroup python
    autocmd!
    autocmd FileType python setlocal foldmethod=indent
    autocmd FileType python setlocal errorformat=%f:%l:%c:\ %m
    autocmd FileType python setlocal makeprg=pylint\ --errors-only\ %
    autocmd FileType python setlocal shellpipe=\|\ grep\ \".py\"\ \|\ tee
augroup end
" }}}
" }}}

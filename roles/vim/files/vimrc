" vim: fdm=marker
" INIT {{{
set nocompatible
set shortmess=I
" }}}
" FILE {{{
set path+=**
" }}}
" MENU {{{
set confirm
set wildmenu
set completeopt=longest,menuone
" }}}
" PASTE {{{
set clipboard=unnamedplus
" }}}
" STATUS {{{
set laststatus=2
set statusline=\ %n:\ \%f\ %y%=%r\ %l\ :\ %c\ (%p%%)\ 
" }}}
" SEARCH {{{
set gdefault
set hlsearch
set incsearch
" }}}
" INDENT {{{
set smarttab
set expandtab
set autoindent
set copyindent
set tabstop=4 
set shiftround
set shiftwidth=4
set softtabstop=4
set backspace=indent,eol,start
" }}}
" BUFFER {{{
set hidden
set scrolloff=10
" }}}
" NUMBER {{{
set number
set relativenumber
" }}}
" FOLDER {{{
set foldmethod=syntax
set foldlevelstart=99
" }}}
" BACKUP {{{
set undofile
set undodir=~/.vim/undo/
set directory=~/.vim/swap/
set viminfo ='200,n~/.vim/viminfo
" }}}
" KEYMAP {{{
imap jk <Esc>

vnoremap ; :
nnoremap ; :

nnoremap j gj
nnoremap k gk

nnoremap B g^
nnoremap E g$
nnoremap Y y$

nnoremap J <C-d>
nnoremap K <C-u>
nnoremap U <C-r>

nnoremap H :bp<CR>
nnoremap L :bn<CR>
nnoremap Q :bd<CR>

xnoremap < <gv
xnoremap > >gv
nnoremap + gg=G
nnoremap = gqap

nnoremap <CR> <C-e>
noremap! <C-k> <Up>
noremap! <C-j> <Down>
noremap! <C-h> <Left>
noremap! <C-l> <Right>

inoremap ' ''<Esc>i
inoremap " ""<Esc>i
inoremap ( ()<Esc>i
inoremap [ []<Esc>i
inoremap { {}<Esc>i
inoremap < <><Esc>i

nnoremap g/ :find 
nnoremap gl :nohl<CR>
nnoremap g<Tab> <c-^>
nnoremap g. :edit $MYVIMRC<CR>
nnoremap g, :source $MYVIMRC<CR>
nnoremap g! :w !sudo tee > /dev/null %<CR>
" }}}
" PLUGIN {{{
syntax enable
filetype indent on
filetype plugin on
try
    colorscheme molokai
catch
    colorscheme darkblue
endtry
" }}}

" vim: fdm=marker
" INIT {{{
set nocompatible
set shortmess=I
" }}}
" FILE {{{
set path+=**
set linebreak
" }}}
" MENU {{{
set confirm
set wildmenu
set completeopt=longest,menuone
" }}}
" PASTE {{{
set clipboard=unnamedplus
" }}}
" STATUS {{{
set laststatus=2
set statusline=\ %n:\ \%f\ %y%=%r\ %l\ :\ %c\ (%p%%)\ 
" }}}
" SEARCH {{{
set gdefault
set hlsearch
set incsearch
" }}}
" INDENT {{{
set smarttab
set expandtab
set autoindent
set copyindent
set tabstop=4 
set shiftround
set shiftwidth=4
set softtabstop=4
set backspace=indent,eol,start
" }}}
" BUFFER {{{
set hidden
set scrolloff=10
" }}}
" NUMBER {{{
set number
set relativenumber
" }}}
" FOLDER {{{
set foldmethod=syntax
set foldlevelstart=99
" }}}
" BACKUP {{{
set undofile
set undodir=~/.vim/undo/
set directory=~/.vim/swap/
set viminfo ='200,n~/.vim/viminfo
" }}}
" KEYMAP {{{
imap fd <Esc>

vnoremap ; :
nnoremap ; :

nnoremap j gj
nnoremap k gk

nnoremap B g^
nnoremap E g$
nnoremap Y y$

nnoremap J <C-d>
nnoremap K <C-u>
nnoremap U <C-r>

nnoremap H :w<CR>:bp<CR>
nnoremap L :w<CR>:bn<CR>
nnoremap Q :w<CR>:bd<CR>

noremap + gg=G
noremap = gqap

nnoremap <CR> <C-e>
nnoremap zj o<Esc>k
nnoremap zk O<Esc>j

xnoremap < <gv
xnoremap > >gv

noremap! <C-k> <Up>
noremap! <C-j> <Down>
noremap! <C-h> <Left>
noremap! <C-l> <Right>

inoremap ' ''<Esc>i
inoremap " ""<Esc>i
inoremap ( ()<Esc>i
inoremap [ []<Esc>i
inoremap { {}<Esc>i
inoremap < <><Esc>i
" }}}
" LEADER {{{
let mapleader=" " 
let maplocalleader="," 
nnoremap <leader>o :set 
nnoremap <leader>O :setl 
nnoremap <leader>f :find 
nnoremap <leader>h :help 
nnoremap <leader>H :helpgrep 
nnoremap <leader>l :nohl<CR>
nnoremap <leader><Tab> <c-^>
nnoremap <leader>s :set spell!<CR>
nnoremap <leader>i :py
nnoremap <leader>d :!pydoc 
nnoremap <leader>t :!pytest %<CR>
nnoremap <leader>p :!python3 %<CR>
nnoremap <leader>' :edit $MYVIMRC<CR>
nnoremap <leader>" :source $MYVIMRC<CR>
nnoremap <leader>; :s/^/# /<CR>:nohl<CR>
vnoremap <leader>; :s/^/# /<CR>:nohl<CR>
nnoremap <leader>: :s/^# //<CR>:nohl<CR>
vnoremap <leader>: :s/^# //<CR>:nohl<CR>
nnoremap <leader>! :w !sudo tee > /dev/null %<CR>
" }}}
" PLUGIN {{{
syntax enable
filetype indent on
filetype plugin on
try
    colorscheme molokai
catch
    colorscheme darkblue
endtry
" }}}

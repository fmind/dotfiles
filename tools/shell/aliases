alias fid="find . -iname "
alias fih="find ~ -iname "
alias awktab="awk -F $'\t'"
function union {
    sort $1 $2 | uniq
}
function intersect {
    sort $1 $2 | uniq -d
}
function difference {
    sort $1 $2 $1 | uniq -u
}

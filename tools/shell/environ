export LANG=en_US.UTF-8

export TERM=screen-256color

if [ -n "$DISPLAY" ]; then
    # support X clipboard
    export EDITOR='vimx'
else
    export EDITOR='vim'
fi

export PYENV_ROOT="$HOME/.pyenv"

export PATH="$HOME/bin:$HOME/.local/bin:$PYENV_ROOT/bin:/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"

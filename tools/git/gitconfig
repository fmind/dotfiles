[core]
    editor = vim
    excludesfile = ~/.gitignore

[color]
    ui = auto

[merge]
    tool = vimdiff

[push]
    default = simple

[alias]
    st = status
    ss = status -s
    aa = add --all
    ci = commit -m
    ca = commit -am
    ph = push
    phsu = push --set-upstream origin master
    pl = pull
    df = diff
    br = branch
    ck = checkout
    sm = submodule
    lo = log --oneline
    lg = log --graph
    lp = log --graph --decorate --pretty=oneline --abbrev-commit


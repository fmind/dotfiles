## Docker{{{
alias dk='docker'
alias dr='docker run --rm'
alias dkstart="service docker start"
alias dksh='docker run --rm --name shell fmind/shell'
alias dkrm="docker images --quiet --filter=dangling=true | xargs --no-run-if-empty docker rmi -f"
alias dkdata='docker run --rm -it --name data -v "$(pwd)":/home/jovyan/work -p 8888:8888 fmind/bigdata'
alias dkmongo='docker run --rm -it --name mongo --net=host -v "$(pwd)/data/db":/data/db mongo --smallfiles'
#}}}

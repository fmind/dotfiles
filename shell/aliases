# Git {{{
alias g='git'
alias grr='rm -rf .git'
function gf {
  git clone gitea@git.fmind.me:fmind/$1.git
}
function gh {
  git clone git@github.com:fmind/$1.git
}
function gfo {
    git remote add origin "git@git.fmind.me:fmind/$(basename $PWD).git"
    git push -u origin master
}
function gho {
    git remote add origin "git@github.com:fmind/$(basename $PWD).git"
    git push -u origin master
}
# }}}

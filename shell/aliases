## Env {{{
alias pvq='deactivate'
alias pvv='source venv/bin/activate'
alias pvn='python -m venv ./venv --clear'
function pve {
  echo 'source "$(dirname $0)/venv/bin/activate"' > .env
}
function pvp {
cat << EOF > .projections.json
{
  "$(basename $PWD)/*.py": {"alternate": "tests/test_{}.py", "type": "test"},
  "tests/test_*.py": {"alternate": "$(basename $PWD)/{}.py", "type": "source"}
}
EOF
}
# }}}

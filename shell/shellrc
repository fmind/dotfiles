umask 0077

export DISABLE_AUTO_TITLE='true'

# remap capslock
if [ -n "$DISPLAY" ]; then
    setxkbmap -option caps:escape
fi

# change key repeat
if [ -n "$DISPLAY" ]; then
    xset r rate 200 50
fi

# Enable byobu
if [ -n "$ZSH_VERSION" ]; then
    if [ -x "$(command -v byobu)" ]; then
        _byobu_sourced=1 . /usr/bin/byobu-launch 2>/dev/null || true
    fi
fi

# Enable pyenv
if [ -d "$PYENV_ROOT" ]; then
    eval "$(pyenv init -)"
fi
